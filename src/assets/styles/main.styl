@import "../../assets/styles/variables.styl"

.login-form
  margin 0 auto
  margin-top 200px
  flex-direction column
  align-items center

.input-container
  position relative
  width 295px
  height 40px
  margin-bottom 34px

  .input-valid
    width 100%
    height 100%
    border 1px solid $green-color
    background-color $white-color
    border-radius 5px
    letter-spacing -0.14px
    padding 10px 40px
    color $gray-color-dark


  .input, .input-noValid
    width 100%
    height 100%
    border 1px solid $gray-color
    background-color $white-color
    border-radius 5px
    letter-spacing -0.14px
    padding 10px 40px
    color $gray-color-dark

  .icon
    position absolute
    width 14px
    height 14px
    top 50%
    transform translateY(-50%)
    left 20px

  .check-mark
    color $green-color
    position absolute
    top 50%
    right -25px
    transform translateY(-50%)
    font-size 1.3rem

  .incorrect
    color $red-color
    position absolute
    top 50%
    right -25px
    transform translateY(-50%)
    font-size 1.2rem

  .incorrect-text
    color $red-color
    position absolute
    left 0
    bottom -15px
    font-size 0.7rem
