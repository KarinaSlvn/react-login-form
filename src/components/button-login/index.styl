@import "../../assets/styles/variables.styl"

.login
  font-size 1.12rem
  color $white-color
  width 100px
  letter-spacing -0.18px
  height 50px
  border none
  background-color $blue-color
  border-radius 3px
  margin 6px 0 20px 0
  box-shadow $box-shadow-btn

  &:hover
    color $blue-color
    background-color $white-color
    border 1px solid $blue-color
    box-shadow none



